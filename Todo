        [ReUI-Widget-Content-Markdown]

            Markdown->new(file => ...);
            my $mkd = Markdown->new(
                markdown        => $body,
                link_callbacks  => {
                    dist => fun ($uri, $name) {
                        return URI->new("http://search.cpan.org/dist/$name");
                    },
                    _    => fun ($uri) {
                        return URI->new($uri);
                    },
                },
            );

            ReUI
                Widget
                    Content
                        Markdown


