



    · switchable i18n message for easier defaults

        [   'reui.default',
            [   'reui.somewidget.greeting',
                'Hello, [_1]!',
            ],
            'username',
        ];

        tries:
            ['reui.somewidget.greeting', 'username']
        if in eq out:
            ['Hello, [_1]!', 'username']
        if in ne out:
            return 'Hello, username!';

        language aware:

        [   'reui.default',
            [   'reui.somewidget.greeting',
                {   en => 'Hello, [_1]!',
                    de => 'Hallo, [_1]!',
                },
            ],
            'username',
        ];

    · ajax view

        my $aj = View::Ajax->new(
            engine  => 'jQuery',
            path    => '/jquery.something.js',
        );

    · skinning

        # http://localhost/skin/dark/default/base.css
        # http://localhost/skin/dark/default/image/logo.png
        # http://localhost/skin/dark/default/widget/some_widget/base.css
        # http://localhost/skin/dark/overview/some_complex_overview_widget/base.css

        my $skinner = View::Skinner->new(
            include         => {
                default     => [qw( SomeWidget )],
                overview    => [qw( SomeComplexOverviewWidget )],
            },
            skins           => {
                dark    => {
                    class       => 'MyApp::Skin::Dark',
                    title       => 'Default Dark',
                    someopt     => 23,
                },
            },
        );

        my $file = $skinner->find(path => 'image/logo.png');
        my $file = $skinner->find(path => 'base.css', group => 'overview');

        $state->skinning->select('dark');
        $state->skinning->base($ctx->uri_for_action('skin/serve'));
        $state->skinning->groups('overview');

        inside Page:
            $state->skinning->uri_for('logo.png')
            $state->skinning->uri_for($widget, 'base.css');

    · turn result state class into a trait

    · sections

        my $section = Section->new(
            title   => 'Test Title',
            widgets => [
                SomeContent->new,
            ],
        );

    · messages

        my $message = Message->new(
            title       => 'Changes saved',
            category    => 'notice',
            widgets     => [
                'Some Message',
            ],
        );

    · dialogs

        my $dialog = Dialog->new(
            title       => 'Test Dialog',
            messages    => [
                Message->new(
                    category    => 'notice',
                    widgets     => [ ... ],
                ),
            ],
            actions     => [
                Submit->new(name => 'ok'),
                Submit->new(name => 'cancel'),
            ],
            widgets     => [
                Value->new(name => 'new_name'),
            ],
        );

    · control sets

        my $fields = ControlSet->new(
            name        => 'profile',
            style       => 'tabular',   # control/set/tabular.base.html
            error_style => 'list',      # control/set/tabular.error.list.html
            controls    => [
                Value->new(name => 'username'),
                Value->new(name => 'email'),
            ],
        );

    · dynamic containers

        my $dyn = Dynamic->new(
            build => sub {
                ...
            },
        );

    · action sets

        my $sactions = ActionSet->new(
            name    => 'actions',
            style   => 'base',
            actions => [
                Submit->new(name => 'save'),
                Submit->new(name => 'delete'),
                Submit->new(name => 'cancel'),
            ],
        );

        $state->on_success($actions->action('save'),   sub { ... });
        $state->on_success($actions->action('delete'), sub { ... });

